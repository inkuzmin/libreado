.welcome-logo
  width 60%
  height 128px
  margin 15px auto
  background-image url(../../images/welcome/logo.svg)
  background-repeat no-repeat
  background-position top center


.welcome-logotype
  padding-left 1%
  width 60%
  height (128*100/400)%
  margin 15px auto
  user-select none


  .welcome-logotype-logo
    position relative
    width 100%
    height 0
    padding-bottom (81*100/128)%
    padding-top (51*100/128)%
    background-image url(../../images/welcome/logo2.svg)
    background-repeat no-repeat
    background-position top center

    .welcome-logotype-type
      width 100%
      padding-bottom (47*100/128)%
      background-image url(../../images/welcome/type2.svg)
      background-repeat no-repeat
      background-position top center

.welcome-login
  width 80%
  margin 5px auto

  input[type="text"], input[type="password"]
    display block
    width 99%
    margin 6px auto
    border none
    border-bottom 1px solid #eaeaea
    outline none
    background-color transparent
    color #eaeaea
    font-size 1.2em
  input[type="submit"]
    float right
    position relative
    top -37px
    width 25px
    height 25px
    border none
    outline none
    background-image url(../../images/welcome/arrow.svg)
    background-repeat no-repeat
    background-color transparent


  .welcome-additional
    input[type="checkbox"]
      display inline-block
    /*display block*/
    .welcome-remember, .welcome-separator, .welcome-forgot
      float left
      font-size 0.8em
      white-space nowrap
    content ''
    label
      outline none
.welcome-register
  display block
  margin-top 100px
  text-align center